# ============================================================
# Enterprise Agent Platform - LOCAL DEVELOPMENT defaults
# ============================================================
# This file is loaded by docker-compose.dev.yml and the dev
# startup script.  It is safe to commit because it contains
# only non-secret development values.
#
# NEVER copy these values to a production environment.
# ============================================================

# ------------------------------------------------------------
# Application
# ------------------------------------------------------------
ENVIRONMENT=dev
DEBUG=true
SECRET_KEY=dev-secret-key-not-for-production
# Generate a real key with: python -c "import secrets; print(secrets.token_hex(32))"

# ------------------------------------------------------------
# Database (PostgreSQL 16 + pgvector)
# ------------------------------------------------------------
# Local access (from host machine or local Python scripts)
DATABASE_URL=postgresql+asyncpg://app:app_password@localhost:5432/enterprise_agents

# Docker-compose internal access (overridden in docker-compose.dev.yml)
# DATABASE_URL=postgresql+asyncpg://app:app_password@db:5432/enterprise_agents

POSTGRES_USER=app
POSTGRES_PASSWORD=app_password
POSTGRES_DB=enterprise_agents

# Set to true to log all SQL queries (very verbose)
DB_ECHO_SQL=false

# ------------------------------------------------------------
# Redis
# ------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
# Docker-compose internal: REDIS_URL=redis://redis:6379/0

# ------------------------------------------------------------
# LiteLLM Proxy
# Point to mock for fully offline dev, or real litellm container
# ------------------------------------------------------------
LITELLM_BASE_URL=http://localhost:4000
LITELLM_API_KEY=sk-dev-key

# Use the mock model names when LITELLM_BASE_URL points to mock_llm
LITELLM_DEFAULT_MODEL=mock/dev-model
LITELLM_EMBEDDING_MODEL=mock/embed-model

# Uncomment to use Ollama models instead (requires ollama running)
# LITELLM_DEFAULT_MODEL=ollama/llama3.2
# LITELLM_EMBEDDING_MODEL=ollama/nomic-embed-text

# Uncomment to use OpenAI (requires OPENAI_API_KEY)
# LITELLM_DEFAULT_MODEL=openai/gpt-4o-mini
# LITELLM_EMBEDDING_MODEL=openai/text-embedding-3-small

# ------------------------------------------------------------
# Cloud LLM API Keys (optional - only needed for cloud models)
# ------------------------------------------------------------
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ------------------------------------------------------------
# OIDC / Auth (dev mode uses symmetric JWT secret)
# ------------------------------------------------------------
OIDC_ISSUER_URL=http://localhost:8080/realms/dev
OIDC_CLIENT_ID=enterprise-agents
OIDC_AUDIENCE=enterprise-agents-api
DEV_JWT_SECRET=dev-only-jwt-secret-not-for-production

# ------------------------------------------------------------
# CORS (dev allows all local origins)
# ------------------------------------------------------------
CORS_ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8000"]

# ------------------------------------------------------------
# Rate Limiting (relaxed for dev)
# ------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=1000

# ------------------------------------------------------------
# RAG / Document Processing
# ------------------------------------------------------------
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=50
VECTOR_TOP_K=5
EMBEDDING_DIMENSIONS=1536

# ------------------------------------------------------------
# Model Routing & Token Economy
# ------------------------------------------------------------
MODEL_ROUTING_ENABLED=true
MODEL_LIGHT=mock/fast-model
MODEL_STANDARD=mock/dev-model
MODEL_HEAVY=mock/dev-model
TOKEN_BUDGET_DAILY=10000000
TOKEN_BUDGET_MONTHLY=100000000

# ------------------------------------------------------------
# Observability (disabled by default in dev)
# ------------------------------------------------------------
ENABLE_TELEMETRY=false
OTLP_ENDPOINT=http://localhost:4317
